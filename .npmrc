# Workspace configuration
workspaces-update=false
save-exact=false
package-lock=true

# Performance optimizations
fund=false
audit=false

# Ensure we use the workspace versions of packages
prefer-workspace-packages=true

# Engine strict to ensure Node.js version compatibility
engine-strict=true

# Use npm registry
registry=https://registry.npmjs.org/

# Handle peer dependency conflicts more gracefully
legacy-peer-deps=true 