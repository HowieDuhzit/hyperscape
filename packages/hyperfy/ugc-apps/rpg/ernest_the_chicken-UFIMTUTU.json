{
  "id": "ernest_the_chicken",
  "name": "Ernest the Chicken",
  "description": "Help Veronica find her fiancé Ernest, who has been turned into a chicken!",
  "difficulty": "Novice",
  "questPoints": 4,
  "requirements": {
    "skills": {},
    "quests": [],
    "items": []
  },
  "startNpc": "veronica",
  "stages": [
    {
      "id": "start",
      "description": "Talk to Veronica outside Draynor Manor",
      "objectives": [
        {
          "type": "talk_to_npc",
          "npcId": "veronica",
          "dialogue": "Please help! My fiancé Ernest went into the manor and hasn't come back!"
        }
      ]
    },
    {
      "id": "find_ernest",
      "description": "Search for Ernest in Draynor Manor",
      "objectives": [
        {
          "type": "reach_location",
          "target": "draynor_manor_top_floor",
          "description": "Search the manor for Ernest"
        }
      ]
    },
    {
      "id": "talk_to_professor",
      "description": "Talk to Professor Oddenstein",
      "objectives": [
        {
          "type": "talk_to_npc",
          "npcId": "professor_oddenstein",
          "dialogue": "Ah yes, Ernest helped test my machine and turned into a chicken! I need parts to fix it."
        }
      ]
    },
    {
      "id": "collect_parts",
      "description": "Collect machine parts around the manor",
      "objectives": [
        {
          "type": "collect_items",
          "itemId": "pressure_gauge",
          "quantity": 1,
          "description": "Find the pressure gauge in the fountain"
        },
        {
          "type": "collect_items",
          "itemId": "rubber_tube",
          "quantity": 1,
          "description": "Get the rubber tube from the skeleton room"
        },
        {
          "type": "collect_items",
          "itemId": "oil_can",
          "quantity": 1,
          "description": "Find the oil can in the basement"
        }
      ]
    },
    {
      "id": "fix_machine",
      "description": "Return the parts to Professor Oddenstein",
      "objectives": [
        {
          "type": "deliver_items",
          "npcId": "professor_oddenstein",
          "items": [
            { "itemId": "pressure_gauge", "quantity": 1 },
            { "itemId": "rubber_tube", "quantity": 1 },
            { "itemId": "oil_can", "quantity": 1 }
          ],
          "dialogue": "Excellent! Let me fix the machine... There! Ernest is back to normal!"
        }
      ]
    },
    {
      "id": "talk_to_ernest",
      "description": "Talk to Ernest",
      "objectives": [
        {
          "type": "talk_to_npc",
          "npcId": "ernest",
          "dialogue": "Thank you for saving me! Being a chicken was terrible!"
        }
      ]
    }
  ],
  "rewards": {
    "items": [
      { "itemId": "coins", "quantity": 300 },
      { "itemId": "feather", "quantity": 300 }
    ],
    "questPoints": 4
  }
} 