    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": "22.11.0"
  },
  "overrides": {
    "three": "^0.178.0"
  },
  "license": "GPL-3.0-only"
}
