{
  "name": "@hyperscape/hyperfy",
  "version": "0.13.0",
  "type": "module",
  "main": "build/index.js",
  "types": "lib.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "homepage": "https://github.com/hyperfy-xyz/hyperfy#readme",
  "bugs": {
    "url": "https://github.com/hyperfy-xyz/hyperfy/issues"
  },
  "keywords": [
    "hyperfy",
    "3d",
    "components",
    "virtual-worlds",
    "metaverse",
    "three.js",
    "webgl",
    "real-time"
  ],
  "scripts": {
    "start:production": "node scripts/start-production-server.mjs",
    "dev": "bun scripts/build-dev.mjs",
    "build": "bun scripts/build-ts.mjs --no-typecheck",
    "build:typecheck": "bun scripts/build-ts.mjs",
    "dev:vite": "vite --port 4445",
    "build:vite": "vite build",
    "preview:vite": "vite preview",
    "start": "bun build/index.js",
    "node-client:dev": "bun scripts/build-node-client.mjs --dev",
    "node-client:build": "bun scripts/build-node-client.mjs",
    "build:rpg-ugc": "bun scripts/build-rpg-ugc.mjs",
    "lint": "eslint src --max-warnings 50",
    "lint:fix": "eslint src --fix --max-warnings 50",
    "format": "prettier --write .",
    "check": "npm run lint && npm run format",
    "publish:node": "bun scripts/build-node-client.mjs && npm publish",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "build:types": "bun run typecheck && tsc --emitDeclarationOnly && dts-bundle-generator -o build/index.d.ts src/server/index.ts",
    "clean": "rm -rf build dist generation-output"
  },
  "files": [
    "build/lib/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/websocket": "^11.0.1",
    "@pixiv/three-vrm": "^3.3.3",
    "d3": "^7.9.0",
    "dotenv-flow": "^4.1.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eventemitter3": "^5.0.1",
    "fastify": "^5.0.0",
    "find-cache-dir": "^5.0.0",
    "fs-extra": "^11.2.0",
    "hls.js": "^1.6.1",
    "jsonwebtoken": "^9.0.2",
    "livekit-client": "^2.9.9",
    "livekit-server-sdk": "^2.11.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.469.0",
    "moment": "^2.30.1",
    "msgpackr": "^1.11.0",
    "nanoid": "^5.0.6",
    "postprocessing": "^6.36.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ses": "^1.10.0",
    "source-map-support": "^0.5.21",
    "three": "^0.178.0",
    "three-mesh-bvh": "^0.8.3",
    "yoga-layout": "^3.2.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-react": "^7.23.10",
    "@playwright/test": "^1.53.1",
    "@types/bun": "^1.2.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/source-map-support": "^0.5.10",
    "@types/three": "^0.173.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.6.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^11.0.3",
    "jsdom": "^25.0.1",
    "playwright": "^1.53.1",
    "prettier": "^3.4.2",
    "puppeteer": "^24.10.2",
