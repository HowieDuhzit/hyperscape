{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "noEmit": false
  },
  "include": [
    "src/index.ts",
    "src/app.ts", 
    "src/types/**/*",
    "src/core/**/*",
    "src/entities/**/*",
    "src/api/RPGPublicAPI.ts",
    "src/api/events.ts",
    "src/api/queries.ts",
    "src/systems/StatsSystem.ts",
    "src/systems/BankingSystem.ts",
    "src/systems/InventorySystem.ts",
    "src/systems/MovementSystem.ts",
    "src/systems/NavigationSystem.ts",
    "src/systems/NPCSystem.ts",
    "src/systems/LootSystem.ts",
    "src/systems/SpawningSystem.ts",
    "src/systems/VisualRepresentationSystem.ts",
    "src/systems/DeathRespawnSystem.ts",
    "src/systems/SkillsSystem.ts",
    "src/systems/CombatSystem.ts",
    "src/world/RPGWorldManager.ts",
    "src/config/**/*",
    "src/ui/UISystem.ts",
    "src/ui/InputHandler.ts",
    "src/ui/UIRenderer.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app-dist",
    "build-app.js",
    "src/systems/TradingSystem.ts",
    "src/world/SemanticWorldGenerator.ts",
    "src/systems/combat/**/*",
    "src/systems/inventory/**/*",
    "src/systems/loot/**/*",
    "src/systems/npc/**/*",
    "src/systems/spawning/**/*",
    "src/systems/skills/**/*",
    "src/systems/items/**/*",
    "src/systems/zones/**/*",
    "src/systems/resources/**/*",
    "**/*.test.ts",
    "**/__tests__/**/*"
  ]
}