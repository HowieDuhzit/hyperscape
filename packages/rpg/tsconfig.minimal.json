{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "noEmit": false
  },
  "include": [
    "src/index.ts",
    "src/app.ts", 
    "src/RPGPlugin.ts",
    "src/types/**/*",
    "src/core/**/*",
    "src/api/**/*",
    "src/entities/**/*",
    "src/systems/StatsSystem.ts",
    "src/systems/BankingSystem.ts",
    "src/systems/InventorySystem.ts",
    "src/systems/MovementSystem.ts",
    "src/systems/NPCSystem.ts",
    "src/systems/LootSystem.ts",
    "src/systems/SpawningSystem.ts",
    "src/systems/VisualRepresentationSystem.ts",
    "src/systems/DeathRespawnSystem.ts",
    "src/systems/SkillsSystem.ts",
    "src/systems/CombatSystem.ts",
    "src/world/**/*",
    "src/ui/**/*",
    "src/config/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app-dist",
    "build-app.js",
    "src/systems/TradingSystem.ts",
    "src/world/SemanticWorldGenerator.ts",
    "src/systems/combat/AdvancedCombatSystem.ts",
    "src/systems/combat/CombatAnimationSystem.ts",
    "src/systems/combat/CombatAnimationManager.ts",
    "**/*.test.ts",
    "**/__tests__/**/*"
  ]
}