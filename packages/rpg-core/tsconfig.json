{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*", "src/@types/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/systems/TradingSystem.ts",
    "src/systems/MovementSystem.ts",
    "src/systems/SpawningSystem.ts",
    "src/world/SemanticWorldGenerator.ts"
  ]
} 